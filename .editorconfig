# EditorConfig für 4D Viewer
# Siehe: https://editorconfig.org

root = true

[*]
charset = utf-8 # Verwende UTF-8 als Zeichencodierung
end_of_line = CRLF # Unix-Zeilenende (LF|CRLF|CR)
insert_final_newline = false # Am Ende jeder Datei wird eine Leerzeile eingefügt
trim_trailing_whitespace = true # Entfernt Leerzeichen am Ende jeder Zeile

# Einheitliche generische Einrückung (tab|space)
indent_style = space
indent_size = 4

# Java:
[*.java]
max_line_length = 120